generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Country {
  id   Int    @id @default(autoincrement())
  code String @unique
  name String
  flag String?
}

model Category {
  id    Int     @id @default(autoincrement())
  slug  String  @unique
  name  String
  image String?

  products Product[]
}

model Product {
  id            Int      @id @default(autoincrement())
  name          String
  categorySlug  String
  price         Int
  originalPrice Int?
  image         String
  imagesJson    String
  sale          Boolean  @default(false)
  discount      Int      @default(0)
  colorsJson    String
  sizesJson     String
  fabric        String?
  description   String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  category Category @relation(fields: [categorySlug], references: [slug])
  orderItems OrderItem[]

  @@index([categorySlug])
}

model User {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  passwordHash String
  phone        String?
  role         String   @default("CUSTOMER")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  orders        Order[]
  supportEvents SupportActionLog[] @relation("SupportActor")
}

model Order {
  id              String      @id @default(cuid())
  orderNumber     String      @unique
  userId          String?
  user            User?       @relation(fields: [userId], references: [id])
  status          String      @default("PLACED")

  currency        String      @default("PKR")
  subtotal        Int
  discount        Int         @default(0)
  shipping        Int         @default(0)
  total           Int

  customerName    String
  customerEmail   String
  customerPhone   String?

  shipLine1       String
  shipLine2       String?
  shipCity        String
  shipState       String?
  shipPostal      String
  shipCountryCode String

  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  shippedAt       DateTime?
  deliveredAt     DateTime?

  items       OrderItem[]
  supportLogs SupportActionLog[]

  @@index([customerEmail])
  @@index([status])
}

model OrderItem {
  id            String   @id @default(cuid())
  orderId       String
  productId     Int
  quantity      Int
  unitPrice     Int
  lineTotal     Int
  selectedSize  String?
  selectedColor String?
  createdAt     DateTime @default(now())

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@index([orderId])
}

model SupportActionLog {
  id          String            @id @default(cuid())
  orderId     String
  actorUserId String
  action      String
  detailsJson String?
  createdAt   DateTime          @default(now())

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
  actor User  @relation("SupportActor", fields: [actorUserId], references: [id])

  @@index([orderId])
  @@index([actorUserId])
}
